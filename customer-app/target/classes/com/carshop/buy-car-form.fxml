<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="com.carshop.BuyCarController" 
      spacing="10" alignment="CENTER" style="-fx-padding: 20;">
    <Label fx:id="title" text="Do you want to confirm this purchase, Please Read the Specifications" style="-fx-font-size: 18; -fx-font-weight: bold;"/>

    <GridPane hgap="10" vgap="10">
        <Label text="Car" minWidth="100" GridPane.columnIndex="0" GridPane.rowIndex="0" />
        <Label fx:id="carName" GridPane.columnIndex="1" GridPane.rowIndex="0"/>

        <Label text="Color" minWidth="100" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
        <Label fx:id="color" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

        <Label text="Engine" minWidth="100" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
        <Label fx:id="engine" GridPane.columnIndex="1" GridPane.rowIndex="2"/>

        <Label text="Transmission" minWidth="100" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
        <Label fx:id="transmission" GridPane.columnIndex="1" GridPane.rowIndex="3"/>

        <Label text="Price" minWidth="100" GridPane.columnIndex="0" GridPane.rowIndex="4"/>
        <Label fx:id="price" GridPane.columnIndex="1" GridPane.rowIndex="4"/>

        <Label text="User: " minWidth="100" GridPane.columnIndex="0" GridPane.rowIndex="5" />
        <Label fx:id="userid" GridPane.columnIndex="1" GridPane.rowIndex="5"/>
    </GridPane>

    <HBox spacing="10" alignment="CENTER">
        <Button text="Confirm Purchase" onAction="#handleConfirm"/>
        <Button text="Cancel" onAction="#handleCancelButton"/>
    </HBox>
</VBox>