<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="10" xmlns:fx="http://javafx.com/fxml/1"  fx:controller="com.carshop.LoginController">

    <Label fx:id="title" style="-fx-font-size: 18; -fx-font-weight: bold;" text="Log-in Screen" />

    <HBox alignment="CENTER" spacing="10">
        <Label text="User ID:" HBox.hgrow="ALWAYS" />
        <TextField fx:id="userIDField" HBox.hgrow="ALWAYS" />
      <VBox.margin>
         <Insets left="170.0" right="170.0" />
      </VBox.margin>
    </HBox>

    <Button fx:id="backButton" onAction="#handleLogin" text="Log-in" />

    <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
</VBox>
