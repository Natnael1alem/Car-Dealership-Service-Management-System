<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="com.carshop.NewEngineController" 
      spacing="10" alignment="CENTER" style="-fx-padding: 20;">
    <Label text="New Engine" style="-fx-font-size: 18; -fx-font-weight: bold;"/>
    <GridPane hgap="10" vgap="10" >
        <Label text="Name:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
        <TextField fx:id="nameField" GridPane.columnIndex="1" GridPane.rowIndex="0"/>
        
    </GridPane>
    <HBox spacing="10" alignment="CENTER">
        <Button text="Ok" onAction="#handleOkButton"/>
        <Button text="Cancel" onAction="#handleCancelButton"/>
    </HBox>
</VBox>