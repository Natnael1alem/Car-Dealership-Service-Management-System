<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="com.carshop.AddCarFormController" 
      spacing="10" alignment="CENTER" style="-fx-padding: 20;">
    <Label text="Add New Car" style="-fx-font-size: 18; -fx-font-weight: bold;"/>
    <GridPane hgap="10" vgap="10">
        <Label text="Model:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
        <ComboBox fx:id="modelComboBox" GridPane.columnIndex="1" GridPane.rowIndex="0"/>
        <Button text="+" onAction="#handleNewModelButton" GridPane.columnIndex="2" GridPane.rowIndex="0"/>
        
        <Label text="Color:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
        <ComboBox fx:id="colorComboBox" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
        <Button text="+" onAction="#handleNewColorButton" GridPane.columnIndex="2" GridPane.rowIndex="1"/>
        
        <Label text="Engine:" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
        <ComboBox fx:id="engineComboBox" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
        <Button text="+" onAction="#handleNewEngineButton" GridPane.columnIndex="2" GridPane.rowIndex="2"/>
        
        <Label text="Transmission:" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
        <ComboBox fx:id="transmissionComboBox" GridPane.columnIndex="1" GridPane.rowIndex="3"/>
        <Button text="+" onAction="#handleNewTransmissionButton" GridPane.columnIndex="2" GridPane.rowIndex="3"/>
    </GridPane>
    <HBox spacing="10" alignment="CENTER">
        <Button text="Save" onAction="#handleSaveButton"/>
        <Button text="Cancel" onAction="#handleCancelButton"/>
    </HBox>
</VBox>